<%- include('./layout/main'); -%><%- include('./layout/header'); -%>







<div class="thanks-area">
    <div class="container">
        <div class="section-inner">
            <div class="section-icon">
                <i class="fal fa-check"></i>
            </div>
            <div class="section-title">
                <h2 class="sub-title">Thanks For your Order</h2>
                <h3 class="sect-title">Sorry, we couldn't find the page you where looking for. We suggest that <br> you return to homepage.</h3>
            </div>
            <div class="section-button">
                <a class="btn-1" href="/"><i class="fal fa-long-arrow-left"></i> Go To Homepage</a>
            </div>
        </div>
    </div>
</div>



<% if (orderCOUNT.length==1) { %>


    <% coupenDetails.forEach(coupen => { %>
       

    <div class="container">
        <div class="kichu">
          <div class="coupon">
            <i class="fas fa-cut"></i>
            <div class="coupon-head">
              BigMart Special
            </div>
            <div style="color: red;">
              <%= coupen.discount %> % OFF
            </div>
            <div class="coupon-small-print">
              Not vaild with other coupons or discount offers for same service.
            </div>
            <div class="coupon-expiration">
              Valid Till:<%= moment(coupen.enddate).format('DD-MM-YYYY');  %>
            </div>
            <di class="coupon-row">
              <span id="cpnCode"><%= coupen.code %></span>
              <span id="cpnBtn">COPY</span>
          </di>
          <div class="coupon-expiration">
            Don't share coupen code!!
          </div>
          </div>                  
          </div>
        
    </div>

        <% }) %>




        <div class="thanks-area">
            <div class="container">
                <div class="section-inner">
                    
                    <div class="section-title">
                        <h2 style="color: green;" class="sub-title">Congratulations <%= user.fullname %>!!</h2>
                        <h3 style="color: green;" class="sect-title">You unlocked an exclusive coupon code!!We suggest that <br> you return to Accountpage.</h3>
                    </div>
                    <div class="section-button">
                        <a class="btn-1" href="/"><i class="fal fa-long-arrow-left"></i> Go To Accountpage</a>
                    </div>
                </div>
            </div>
        </div>





 
<% } %>




<div class="rts-wishlist-section section-gap">
    <div class="container">
        <table class="table table-bordered table-hover">
            <tbody> 
                

                <% for( let i = 0; i < orderDetails.products.length; i++ ) { %>
                
             
                
                <tr>    
                    <td class="first-child"><a href=""><img style="height: 100px;"
                                src="data:<%= orderDetails.products[i].item.product_image[0].contentType %>;base64,<%= orderDetails.products[i].item.product_image[0].imageBase64 %>" alt=""></a>
                        <a href="" class="pretitle"><%= orderDetails.products[i].item.name %></a>
                    </td>
                    <td><span class="product-price"><%= orderDetails.products[i].item.price %>â‚¹</span></td>
                    <td class="stock">x<%= orderDetails.products[i].quantity %></td>
                    <td class="last-td"><%= orderDetails.address.name %></td>
                </tr>


                <% } %>

            </tbody>
        </table>
        
    </div>
</div>









<script>

    var cpnBtn = document.getElementById("cpnBtn");
              var cpnCode = document.getElementById("cpnCode");
  
              cpnBtn.onclick = function(){
                  navigator.clipboard.writeText(cpnCode.innerHTML);
                  cpnBtn.innerHTML ="COPIED";
                  setTimeout(function(){
                      cpnBtn.innerHTML="COPY";
                  }, 3000);
              }
    
    
    </script>
  
