<!DOCTYPE html>

<html lang="en">
  <head>
    <title>Big mart</title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="keywords"
      content="Gadget Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design"
    />
    <script>
      addEventListener(
        "load",
        function () {
          setTimeout(hideURLbar, 0);
        },
        false
      );
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    </script>
    <!-- Meta tags -->
    <!-- font-awesome icons -->
    <link href="css/font-awesome.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <!-- //font-awesome icons -->
    <!--stylesheets-->
    <link
      href="css/style-signup.css"
      rel="stylesheet"
      type="text/css"
      media="all"
    />
    <!--//style sheet end here-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link
      href="//fonts.googleapis.com/css?family=Montserrat:300,400,500,600"
      rel="stylesheet"
    />
    <link
      href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700"
      rel="stylesheet"
    />
  </head>
  <body> 
    <nav class="navbar navbar-light bg-light" style="height: 100px; background-color: #ffffff;">
      <div class="container justify-content-center">
          <a class="navbar-brand" href="#">
              <img src="https://www.retailcore.in/wp-content/uploads/2019/10/bigmart-150x150.png" />
          </a>
      </div>
  </nav>  
    <h1 class="error"></h1>
    <div class="w3layouts-two-grids">
      <div class="mid-class">
        <div class="txt-left-side">
          <h2>Sign Up Here</h2>
          <form action="/signup" method="post">
            <div id="errorFullname"></div>
            <div class="form-left-to-w3l">
              <span class="fa fa-user-o" aria-hidden="true"></span>
              <input
                type="text"
                name="fullname"
                placeholder="Full Name"
                id="username"
              />     
              <div class="clear"></div>     
            </div>
            <div id="errorPhone"></div>
            <div class="form-left-to-w3l">
              <span class="fa fa-phone" aria-hidden="true"></span>
              <input type="text" name="phone" placeholder="Phone"  />
              <div class="clear"></div>
            </div>
            <div id="errorEmail"></div>
            <div class="form-left-to-w3l">
              <span class="fa fa-envelope-o" aria-hidden="true"></span>
              <input
                type="email"
                name="email"
                placeholder="Email"
                id="userEmail"
              />     
           
              <div class="clear"></div>
            </div>
            <div id="errorPassword"></div>
            <div class="form-left-to-w3l">
              <span class="fa fa-lock" aria-hidden="true"></span>
              <input
                type="password"
                name="password"
                placeholder="Password"
                id="userPassword"
              />
              <div class="clear"></div>
            </div>
            <div id="errorConformpassword"></div>
            <div class="form-left-to-w3l">
              <span class="fa fa-lock" aria-hidden="true"></span>
              <input
                type="password"
                name="conformpassword"
                placeholder="Conform Password"
                id="confirmpassword"
              />
              <div class="clear"></div>
            </div>
            <% if (typeof(message) != 'undefined' && message ) { %>
              <p class="errorMessages"><%= message %></p>
            <% } %>
            <div class="btnn">
              <button id="btn-submit" type="submit">Sign Up</button>
            </div>
          </form>
          <div class="w3layouts_more-buttn">
            <h3>
              Don't Have an account..?
              <a href="/userlogin">Login Here </a>
            </h3>
          </div>
          <div class="clear"></div>
        </div>       
      </div>
    </div>

    <footer class="copyrigh-wthree"></footer>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
    
        $("#btn-submit").click(function () {
          $(".errorMessages").hide();
          var hasError = false;
          var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
          var emailaddressVal = $("#userEmail").val();
          var PasswordVal = $("#userPassword").val();
          var usernameVal = $("#username").val();
          var confirmpasswordval = $("#confirmpassword").val();

          if (emailaddressVal == "") {
            $("#errorEmail").after(
              '<p class="errorMessages" >Please enter your email address.</p>'
            );
            hasError = true;
          }
          if (usernameVal == "") {
            $("#errorFullname").after(
              '<p class="errorMessages">Please enter your name.</p>'
            );
            hasError = true;
          } else if (!emailReg.test(emailaddressVal)) {
            $("#errorEmail").after(
              '<p class="errorMessages">Enter a valid email address.</p>'
            );
            hasError = true;
          }
          if (PasswordVal == "") {
            $("#errorPassword").after(
              '<p class="errorMessages">Please enter your password.</p>'
            );
            hasError = true;
          }
          if (confirmpasswordval !== PasswordVal) {
            $("#errorConformpassword").after(
              '<p class="errorMessages">confirm password wrong.</p>'
            );
            hasError = true;
          }
          if (hasError == true) {
            return false;
          }
        });
    </script>
    <style>
      .errorMessages{
        color: red;
        font-size: small;
        font-family: 'Poppins';
      }
    </style>
  </body>
</html>
